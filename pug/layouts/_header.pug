        opt = Object.assign(opt, input);

    if opt.has_parent
        nav.page-navbar.js-page-navbar.navbar.navbar-expand-lg.page-navbar-light.js-page-navbar-light(class= opt.class_parent)

            +p_header_body()
    else

        +p_header_body()